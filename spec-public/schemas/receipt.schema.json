{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "MCP Receipt",
    "type": "object",
    "required": [
        "header",
        "content",
        "proof"
    ],
    "properties": {
        "header": {
            "type": "object",
            "required": [
                "receipt_id",
                "tenant_id",
                "timestamp"
            ],
            "properties": {
                "receipt_id": {
                    "type": "string"
                },
                "tenant_id": {
                    "type": "string"
                },
                "timestamp": {
                    "type": "number"
                }
            }
        },
        "content": {
            "type": "object",
            "required": [
                "request",
                "response"
            ],
            "properties": {
                "request": {
                    "type": "object"
                },
                "response": {
                    "type": "object"
                }
            }
        },
        "proof": {
            "type": "object",
            "required": [
                "signature",
                "prev_receipt_hash"
            ],
            "properties": {
                "signature": {
                    "type": "string"
                },
                "prev_receipt_hash": {
                    "type": "string"
                },
                "public_key": {
                    "type": "string"
                }
            }
        }
    }
}