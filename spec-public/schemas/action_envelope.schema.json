{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Action Envelope",
    "type": "object",
    "required": [
        "id",
        "action",
        "meta"
    ],
    "properties": {
        "id": {
            "type": "string"
        },
        "action": {
            "type": "string"
        },
        "parameters": {
            "type": "object"
        },
        "meta": {
            "type": "object",
            "required": [
                "tenant_id",
                "targetServer",
                "timestamp"
            ],
            "properties": {
                "tenant_id": {
                    "type": "string"
                },
                "targetServer": {
                    "type": "string"
                },
                "timestamp": {
                    "type": "number"
                }
            },
            "additionalProperties": true
        }
    }
}