{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://agentshield.io/schemas/v0.1.0/action_envelope.json",
    "title": "ActionEnvelope",
    "description": "The atomic unit of work for the Financial MCP Gateway. All requests are normalized to this format.",
    "type": "object",
    "required": [
        "id",
        "version",
        "type",
        "action",
        "parameters",
        "meta"
    ],
    "properties": {
        "id": {
            "type": "string",
            "description": "Unique Request ID (UUID v4 preferred)."
        },
        "version": {
            "type": "string",
            "const": "v0.1.0",
            "description": "Schema version."
        },
        "type": {
            "type": "string",
            "enum": [
                "command",
                "query"
            ],
            "description": "Nature of the action."
        },
        "action": {
            "type": "string",
            "description": "Name of the tool or function being called (e.g., 'get_balance')."
        },
        "parameters": {
            "type": "object",
            "additionalProperties": true,
            "description": "Arguments passed to the tool."
        },
        "meta": {
            "type": "object",
            "required": [
                "timestamp",
                "source",
                "tenant",
                "targetServer"
            ],
            "properties": {
                "timestamp": {
                    "type": "integer",
                    "description": "Unix timestamp (ms) of request reception."
                },
                "source": {
                    "type": "string",
                    "enum": [
                        "http",
                        "sse"
                    ],
                    "description": "Protocol source."
                },
                "tenant": {
                    "type": "string",
                    "description": "Tenant ID identifying the organization."
                },
                "targetServer": {
                    "type": "string",
                    "description": "Name or ID of the upstream MCP server."
                },
                "authContext": {
                    "type": "object",
                    "description": "Identity information (user, role, scopes)."
                }
            }
        }
    }
}