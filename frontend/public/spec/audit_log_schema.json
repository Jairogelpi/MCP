{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "AuditLogEntry",
    "type": "object",
    "properties": {
        "event_id": {
            "type": "string",
            "format": "uuid"
        },
        "timestamp": {
            "type": "number",
            "description": "Epoch MS"
        },
        "tenant_id": {
            "type": "string"
        },
        "actor": {
            "type": "object",
            "properties": {
                "user_id": {
                    "type": "string"
                },
                "role": {
                    "type": "string"
                },
                "ip_address": {
                    "type": "string"
                }
            },
            "required": [
                "user_id",
                "role"
            ]
        },
        "action": {
            "type": "string"
        },
        "resource": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "tool",
                        "key",
                        "policy",
                        "tenant",
                        "ledger"
                    ]
                },
                "id": {
                    "type": "string"
                }
            }
        },
        "outcome": {
            "type": "object",
            "properties": {
                "status": {
                    "type": "string",
                    "enum": [
                        "success",
                        "failure",
                        "blocked"
                    ]
                },
                "error_code": {
                    "type": "string"
                },
                "cost_estimated": {
                    "type": "number"
                }
            }
        },
        "metadata": {
            "type": "object"
        }
    },
    "required": [
        "event_id",
        "timestamp",
        "tenant_id",
        "actor",
        "action"
    ]
}